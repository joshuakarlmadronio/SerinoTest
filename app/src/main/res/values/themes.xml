<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SerinoTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:colorEdgeEffect">@color/fluorescent_blue</item>
    </style>

    <style name="AlertDialogTheme.SerinoTest" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/MyTextAppearanceSmall</item>
        <item name="android:textAppearanceMedium">@style/MyTextAppearanceMedium</item>
        <item name="android:textAppearanceLarge">@style/MyTextAppearanceLarge</item>
        <item name="textAppearanceSearchResultTitle">@style/MyTextAppearanceLarge</item>
    </style>

    <style name="MyTextAppearanceSmall" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/worksans_extralight</item>
    </style>
    <style name="MyTextAppearanceMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/worksans</item>
    </style>
    <style name="MyTextAppearanceLarge" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>